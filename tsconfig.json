{
    "compilerOptions": {
        "allowJs": false,
        "declaration": true,
        "lib": [
            "es5",
            "es6",
            "es2015.collection",
            "es2015.iterable",
            "es2015.promise",
            "dom"
        ],
        "module": "commonjs",
        "moduleResolution": "node",
        "newLine": "lf",
        "noEmitOnError": true,
        "noImplicitAny": true,
        "noImplicitReturns": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "preserveConstEnums": true,
        "pretty": true,
        "removeComments": true,
        "sourceMap": true,
        "strictNullChecks": true,
        "target": "es5"
    },
    "exclude": [
        "dev",
        "dist",
        "lib",
        "tmp",
        "test",
        "node_modules"
    ]
}
